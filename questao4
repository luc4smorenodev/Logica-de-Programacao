Var
// Seção de Declarações das variáveis 
kgdomorango: real
desconto: real
valorpago: real
Inicio
// Seção de Comandos, procedimento, funções, operadores, etc... 


Escreval("Digite Quantos Kg Você quer de morango: ")
leia(kgdomorango)

se kgdomorango > 5 entao
kgdomorango <- kgdomorango * 2.20
escreval(kgdomorango)

fimse

se kgdomorango <= 5 entao
kgdomorango <- kgdomorango * 2.50
escreval(kgdomorango)

fimse

desconto <- kgdomorango * 0.1
 
se kgdomorango > 25.00 entao
desconto <- kgdomorango *0.1

escreval("O desconto é de:", desconto)

valorpago <- kgdomorango - desconto

escreval("Valor a ser pago é: ", valorpago)

fimse

fimalgoritmo
